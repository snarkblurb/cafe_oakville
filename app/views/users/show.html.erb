<% provide(:title, @user.name) %>

<div id="show-user">
	<h1>
		<%= @user.name %>
	</h1>

	<p>
		<% if current_user?(@user) %>
			<%= link_to edit_user_path(current_user) do %>
				Edit
			<% end %>
		<% end %>
	</p>

	<ul>
		<% @events.order("day ASC").each do |event| %>
			<li><%= event.day.strftime('%B %-d, %Y') %></li>
		<% end %>
	</ul>
</div>
