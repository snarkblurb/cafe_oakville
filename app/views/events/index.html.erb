<% provide(:title, 'All events') %>

<div id="all-events">
  <h1>All events</h1>

  <ul class="events">
  <% @events.each do |event| %>
		<li class="date-section"><%= event.day.strftime("%B %-d, %Y") %></li>
			<ul class="event-user-list">
				<% if !event.users.empty? %>
					<% event.users.each do |user| %>
						<li><%= user.name %></li>
					<% end %>
				<% end %>
			</ul>
	<% end %>
	</ul>

	<p>
		<%= link_to "Add event", events_new_path %>
	</p>
</div>
